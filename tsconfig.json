{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "noImplicitAny": false,
  "allowJs": true,
  "typescript.format.semicolons": "remove",

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
